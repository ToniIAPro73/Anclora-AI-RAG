# =============================================================================
# Anclora RAG - Docker Environment Configuration
# =============================================================================
# Este archivo sobrescribe las configuraciones de .env para el entorno Docker

# =============================================================================
# ChromaDB Configuration (Docker network)
# =============================================================================
CHROMA_HOST=chroma
CHROMA_PORT=8000

# =============================================================================
# Ollama Configuration (Docker network)
# =============================================================================
OLLAMA_HOST=ollama
OLLAMA_PORT=11434

# =============================================================================
# API Configuration (Docker network)
# =============================================================================
ANCLORA_API_URL=http://api:8081
ANCLORA_API_CHAT_PATH=/api/chat

# =============================================================================
# Telemetry Configuration (Disable ChromaDB telemetry to avoid PostHog errors)
# =============================================================================
ANONYMIZED_TELEMETRY=False
CHROMA_TELEMETRY=False
CHROMA_SERVER_NO_ANALYTICS=True
CHROMA_TELEMETRY_DISABLED=True
POSTHOG_DISABLED=True
DISABLE_POSTHOG=True