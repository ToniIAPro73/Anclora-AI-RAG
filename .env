# =============================================================================
# Anclora RAG - Environment Configuration
# =============================================================================

# =============================================================================
# Application Configuration
# =============================================================================
MODEL=llama3
EMBEDDINGS_MODEL_NAME=sentence-transformers/all-mpnet-base-v2
TARGET_SOURCE_CHUNKS=5

# =============================================================================
# ChromaDB Configuration (for local development)
# =============================================================================
CHROMA_HOST=localhost
CHROMA_PORT=8000

# =============================================================================
# Ollama Configuration (for local development)
# =============================================================================
OLLAMA_HOST=localhost
OLLAMA_PORT=11434

# =============================================================================
# Authentication & Security
# =============================================================================
# Token por defecto para desarrollo local
ANCLORA_DEFAULT_API_TOKEN=dev-token-local

# =============================================================================
# Monitoring Configuration
# =============================================================================
PROMETHEUS_METRICS_HOST=0.0.0.0

# =============================================================================
# Telemetry Configuration (Disable ChromaDB telemetry to avoid PostHog errors)
# =============================================================================
ANONYMIZED_TELEMETRY=False
CHROMA_TELEMETRY=False
CHROMA_SERVER_NO_ANALYTICS=True
CHROMA_TELEMETRY_DISABLED=True
POSTHOG_DISABLED=True
DISABLE_POSTHOG=True

# =============================================================================
# Development Environment
# =============================================================================
ENV=development
LOG_LEVEL=DEBUG

# =============================================================================
# Optional: LLama Cloud API Key for advanced parsing
# =============================================================================
# LLAMA_CLOUD_API_KEY=your-llama-cloud-api-key

# =============================================================================
# Optional: Whisper Model for audio processing
# =============================================================================
WHISPER_MODEL=base
