# Anclora RAG Configuration

# LlamaCloud API Key for LlamaParse (optional)
# Get your API key from: https://cloud.llamaindex.ai/
LLAMA_CLOUD_API_KEY=your_llama_cloud_api_key_here

# Whisper Configuration for Audio/Video Transcription
# Available models: tiny, base, small, medium, large
WHISPER_MODEL=base

# ChromaDB Configuration
CHROMA_HOST=chroma
CHROMA_PORT=8000

# Ollama Configuration
OLLAMA_HOST=ollama
OLLAMA_PORT=11434

# Model Configuration
MODEL=phi3
EMBEDDINGS_MODEL_NAME=sentence-transformers/all-mpnet-base-v2

# RAG Configuration
TARGET_SOURCE_CHUNKS=5
CHUNK_SIZE=1200
CHUNK_OVERLAP=200

# API Configuration
ANCLORA_API_TOKENS=
ANCLORA_API_TOKEN=
ANCLORA_JWT_SECRET=
ANCLORA_JWT_ALGORITHMS=HS256
ANCLORA_JWT_AUDIENCE=
ANCLORA_JWT_ISSUER=

# Metrics Configuration
PROMETHEUS_METRICS_PORT=9001
PROMETHEUS_METRICS_HOST=0.0.0.0
